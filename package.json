{
	"name": "flixformatter",
	"displayName": "FlixFormatter",
	"description": "Formatter for the flix language",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:flix"
	],
	"main": "./out/extension.js",
	"capabilities": {
		"documentFormattingProvider": "true"
	},
	"keywords": [
		"visual studio code",
		"flix",
		"format"
	],
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"unittest": "mocha -r ts-node/register src/**/*.spec.ts"
	},
	"devDependencies": {
		"@types/chai": "^4.3.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.63.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"chai": "^4.3.4",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"ts-node": "^10.4.0",
		"typescript": "^4.4.4"
	}
}
